<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/activity_main_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.LaunchScreen"
        android:background="#fff">

<!--        <pl.droidsonroids.gif.GifImageView-->
<!--            android:id="@+id/gif_background"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_marginTop="65dp"-->
<!--            android:layout_marginBottom="65dp"-->
<!--            android:layout_marginLeft="180dp"-->
<!--            android:layout_marginRight="180dp"-->
<!--            android:src="@drawable/coin"/>-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:src="@drawable/makao2"/>

        <TextView
            android:id="@+id/blinking_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="50sp"
            android:text="@string/scan_your_card"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:shadowColor="@color/text_shadow"
            android:fontFamily="sans-serif-condensed-medium"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/back_office_cash_management"
            android:textSize="55sp"
            android:textAlignment="center"
            android:shadowColor="@color/text_shadow"
            android:fontFamily="sans-serif-condensed-medium"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <ImageButton
            android:id="@+id/ibCheckConnectionStatus"
            android:src="@drawable/ic_network_check"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/ibChangeLanguage"
            android:src="@drawable/ic_language"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/ibCheckConnectionStatus"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"/>




    </RelativeLayout>
</layout>