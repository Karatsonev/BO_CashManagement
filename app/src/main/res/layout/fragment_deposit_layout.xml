<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.FragmentDeposit"
    android:background="@drawable/bgbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">


            <android.support.v7.widget.CardView
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:cardElevation="10dp"
                android:layout_margin="30dp"
                app:cardCornerRadius="15dp"
                android:id="@+id/cardViewDepositAll">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:src="@drawable/allcash"
                        android:id="@+id/fragmentBtnDepsoitAll"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_deposit_all"
                        android:id="@+id/tvDepositAll"
                        android:textSize="30sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_below="@id/fragmentBtnDepsoitAll"/>



                </RelativeLayout>


            </android.support.v7.widget.CardView
               >

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewDepositBanknotes"
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:src="@drawable/cash"
                        android:id="@+id/fragmentBtnDepositBanknotes"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deposit_cash"
                        android:id="@+id/tvDepositBanknotes"
                        android:layout_below="@id/fragmentBtnDepositBanknotes"
                        android:textSize="30sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewDepositCoins"
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:src="@drawable/coins"
                        android:id="@+id/fragmentBtnDepositCoins"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deposit_coins"
                        android:id="@+id/tvDepositCoins"
                        android:textSize="30sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_below="@id/fragmentBtnDepositCoins"/>


                </RelativeLayout>



            </android.support.v7.widget.CardView>


    </LinearLayout>




</FrameLayout>