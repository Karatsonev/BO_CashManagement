<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.FragmentCashOut"
    android:background="@drawable/bgbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardElevation="10dp"
        android:layout_margin="30dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/cardViewCashOutBanknotes">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/cashoutbanknotes"
                android:id="@+id/fragmentBtnCashOutBanknotes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cashOut_banknotes"
                android:id="@+id/tvCashOutBanknotes"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@id/fragmentBtnCashOutBanknotes"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:cardElevation="10dp"
            android:layout_margin="30dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/cardViewCashOutCoins">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:src="@drawable/cashoutcoins"
                    android:id="@+id/fragmentBtnCashOutCoins" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/withdraw"
                    android:id="@+id/tvCashOutCoins"
                    android:textSize="30sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_below="@id/fragmentBtnCashOutCoins"/>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</FrameLayout>